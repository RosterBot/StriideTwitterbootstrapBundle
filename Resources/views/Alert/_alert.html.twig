{% spaceless %}
<div class="alert {{ alert_type }}" {% if hidden is defined %}style="display:none;"{% endif %} {% if id is defined %}id="warning-{{id}}"{% endif %}>
  <a class="close" data-dismiss="alert">&times;</a>
  <h4 class="alert-heading">{% if title is defined %}{{title}}{%else%}{{ "info.box.title" | trans }}{% endif %}</h4>
  <p>
		{% if message is defined %}
			{{ message | raw}}
		{% else %}
			{{ "info.box.summary" | trans }}
		{% endif %}
	</p>
	<ul></ul>
</div>
{% endspaceless %}
